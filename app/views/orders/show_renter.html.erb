<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="product-infos-container">
        <h2 class="text-center">Your cart</h2>
        <form action="/cart" method="post" id="cartform">
          <table>
            <thead>
              <tr>
                <th class="image"></th>
                <th class="product"></th>
                <th class="ppd">Daily price</th>
                <th class="total">TOTAL</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="image">
                  <div class="product-image">
                     <%= cl_image_tag @order.product.product_images.first.photo_url, class: "image"  %>
                  </div>
                </td>
                <td class="product">
                  <p class="renter">Owner : <%= @owner %></p>
                  <div class="product-description">
                    <%= @order.product.description %>
                  </div>
                </td>
                <td class="ppd">
                    <span class=money>
                      <%=  humanized_money_with_symbol(@order.product.price) %>
                    </span>
                </td>
                <td class="total">
                    <span class=money>
                      <strong>
                        <%=  humanized_money_with_symbol(@order.amount) %>
                      </strong>
                    </span>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="checkout">
<!--             #link_to "Pay your product", pay_product_path(@product), class: "btn btn-primary" -->
              <%= simple_form_for(@order, method: :patch) do |f| %>
              <%= f.input :status, :as => :hidden, :input_html => { :value => "pending_acceptance" } %>
              <%= f.input :redirect_path, :as => :hidden, :input_html => { :value => "index_renter"}  %>
              <%= f.submit'Confirm Rent', class: 'btn btn-success' %>
              <% end %>


          </div>
        </form>
      </div>
    </div>
  </div>
</div>




