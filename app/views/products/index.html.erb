<div class="index-content">
  <div class="cards-container">
    <div class = "row">
      <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <% if  product.product_images.empty? %>
            <div class="card" >
              <%= product.title %>
            </div>
          <% else %>
              <div class="card" style="background-image: url(<%= product.product_images.first.photo_url %>);" >
              <%= product.title %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>">
  </div>
</div>
