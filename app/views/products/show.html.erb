<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="product-infos-container">
        <h2 class="text-center"> <%= @product.title.capitalize %> </h2>
        <div class="row">
          <div class="col-xs-4">
            <%= render 'products/carousel' %>
          </div>
          <div class="col-xs-4">
            <div id="map" style="width: 100%; height: 300px;" data-markers="<%= [{lat: @product.latitude, lng: @product.longitude}].to_json%>">
            </div>
          </div>
          <div class="col-xs-4">
          <% if policy(@product).update? %>
            <%= link_to "Edit your product", edit_product_path(@product), class: "btn btn-primary" %>
          <% else %>
            <div class="form-rent-container">
              <%= render 'products/order_form' %>
            </div>
          <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-9">
            <div class="description-container">
              <div class="user-infos">
              <%= cl_image_tag @product.user.avatar_url, class: "avatar" %>
                 <%= @product.user.first_name %>  <%= @product.created_at.strftime("%d/%m/%Y") %>
              </div>
              <div class="product-description text-center">
              "<%= @product.description %>"
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>

